{
  "name": "terraso-client-shared",
  "version": "0.1.0",
  "private": true,
  "sideEffects": [
    "src/tests/config.ts"
  ],
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.5",
    "@rollbar/react": "^0.11.1",
    "@turf/bbox": "^6.5.0",
    "@turf/center": "^6.5.0",
    "@turf/helpers": "^6.5.0",
    "canvg": "^4.0.1",
    "filesize": "^10.0.7",
    "get-video-id": "^3.6.5",
    "history": "^5.3.0",
    "i18next": "^23.2.6",
    "i18next-browser-languagedetector": "^7.1.0",
    "js-cookie": "^3.0.5",
    "jwt-decode": "^3.1.2",
    "lodash": "^4.17.21",
    "path-browserify": "^1.0.1",
    "react": "^18.2.0",
    "react-redux": "^8.1.0",
    "terraso-backend": "github:techmatters/terraso-backend#8ac6f4e",
    "use-debounce": "^9.0.4",
    "uuid": "^9.0.0",
    "web-vitals": "^3.3.1"
  },
  "scripts": {
    "generate-types": "graphql-codegen",
    "lint-js": "eslint ./ --ext .ts --ext .tsx --max-warnings 0 --ignore-path .gitignore",
    "format-js": "npm run lint-js -- --fix",
    "check-ts": "npm run generate-types && tsc --noEmit --emitDeclarationOnly false",
    "build": "npm run generate-types && tsc && babel src --extensions \".ts\" --out-dir dist && cp -r README.md package.json src dist/",
    "test": "npm run generate-types && jest",
    "test-debug": "npm run generate-types && npx --inspect-brk jest --runInBand --no-cache",
    "test-coverage": "npm run generate-types && jest --coverage --changedSince=origin/main --watchAll=false",
    "prepare": "scripts/prepare.sh"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ],
  "overrides": {
    "prettier": "$prettier"
  },
  "devDependencies": {
    "@babel/cli": "^7.22.5",
    "@babel/core": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@graphql-codegen/cli": "^4.0.1",
    "@graphql-codegen/client-preset": "^4.0.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.0.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.3",
    "@types/jest-axe": "^3.5.5",
    "@types/js-cookie": "^3.0.3",
    "@types/lodash": "^4.14.195",
    "@types/node": "^20.3.3",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/parser": "^5.60.1",
    "babel-plugin-root-import": "^6.6.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-jest": "^27.2.2",
    "eslint-plugin-lodash-fp": "^2.2.0-a1",
    "eslint-plugin-prettier": "^5.0.0",
    "flat": "^5.0.2",
    "i18next-conv": "^14.0.0",
    "jest": "^29.6.1",
    "jest-axe": "^8.0.0",
    "jest-environment-jsdom": "^29.6.1",
    "plausible-tracker": "^0.3.8",
    "prettier": "^3.0.0",
    "stylelint": "^15.10.1",
    "stylelint-prettier": "^3.0.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6",
    "whatwg-fetch": "^3.6.2"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "moduleNameMapper": {
      "terraso-client-shared/(.*)": "<rootDir>/src/$1"
    },
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/src/tests/setup.ts",
      "<rootDir>/src/tests/config.ts"
    ],
    "clearMocks": true
  },
  "graphql": {
    "schema": "node_modules/terraso-backend/terraso_backend/apps/graphql/schema/schema.graphql",
    "documents": "src/**/*.{js,ts,tsx}",
    "extensions": {
      "codegen": {
        "generates": {
          "src/graphqlSchema/": {
            "preset": "client",
            "config": {
              "documentMode": "string",
              "skipTypename": true,
              "enumsAsTypes": true,
              "dedupeFragments": true
            },
            "presetConfig": {
              "fragmentMasking": false
            }
          }
        }
      }
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-typescript"
    ],
    "plugins": [
      [
        "babel-plugin-root-import",
        {
          "rootPathPrefix": "terraso-client-shared/",
          "rootPathSuffix": "./src"
        }
      ]
    ],
    "ignore": [
      "**/*.test.ts",
      "**/*.test.tsx",
      "src/tests"
    ]
  }
}
