{
  "name": "terraso-client-shared",
  "version": "0.1.0",
  "private": true,
  "sideEffects": [
    "src/tests/config.ts"
  ],
  "dependencies": {
    "@reduxjs/toolkit": "^2.9.0",
    "jwt-decode": "^4.0.0",
    "lodash": "^4.17.21",
    "react": "^19.2.0",
    "react-redux": "^9.2.0",
    "terraso-backend": "github:techmatters/terraso-backend#cc3450e62a882464a782c896626ad90609304f8e",
    "uuid": "^10.0.0"
  },
  "scripts": {
    "generate-types": "graphql-codegen",
    "lint": "eslint ./ --ext .ts --ext .tsx --max-warnings 0 --ignore-path .gitignore",
    "lint-js": "npm run lint",
    "format": "npm run lint -- --fix",
    "format-js": "npm run format",
    "check-ts": "npm run generate-types && tsc --noEmit --emitDeclarationOnly false",
    "check-modules": "depcheck",
    "build": "npm run generate-types && tsc && babel src --extensions \".ts,.tsx\" --out-dir dist && cp -r README.md package.json src dist/",
    "test": "npm run generate-types && jest",
    "test-debug": "npm run generate-types && npx --inspect-brk jest --runInBand --no-cache",
    "test-coverage": "npm run generate-types && jest --coverage --changedSince=origin/main --watchAll=false",
    "prepare": "scripts/prepare.sh && husky"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ],
  "overrides": {
    "prettier": "$prettier"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@graphql-codegen/cli": "^6.0.0",
    "@graphql-codegen/client-preset": "^5.0.2",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest-axe": "^3.5.9",
    "@types/lodash": "^4.17.20",
    "@types/react-dom": "^19.2.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/parser": "^8.45.0",
    "babel-plugin-root-import": "^6.6.0",
    "depcheck": "^1.4.7",
    "eslint-config-prettier": "^10.1.8",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-lodash-fp": "^2.2.0-a1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "react-dom": "19.2.0",
    "ts-jest": "^29.4.4",
    "typescript": "^5.9.3",
    "whatwg-fetch": "^3.6.20"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "moduleNameMapper": {
      "terraso-client-shared/(.*)": "<rootDir>/src/$1"
    },
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/src/tests/setup.ts",
      "<rootDir>/src/tests/config.ts"
    ],
    "clearMocks": true,
    "transformIgnorePatterns": [
      "/node_modules/(?!(uuid)/)"
    ]
  },
  "graphql": {
    "schema": "node_modules/terraso-backend/terraso_backend/apps/graphql/schema/schema.graphql",
    "documents": "src/**/*.{js,ts,tsx}",
    "extensions": {
      "codegen": {
        "generates": {
          "src/graphqlSchema/": {
            "preset": "client",
            "config": {
              "documentMode": "string",
              "skipTypename": true,
              "enumsAsTypes": true,
              "dedupeFragments": true
            },
            "presetConfig": {
              "fragmentMasking": false
            }
          }
        }
      }
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-typescript",
      "@babel/preset-react"
    ],
    "plugins": [
      [
        "babel-plugin-root-import",
        {
          "rootPathPrefix": "terraso-client-shared/",
          "rootPathSuffix": "./src"
        }
      ]
    ],
    "ignore": [
      "**/*.test.ts",
      "**/*.test.tsx",
      "src/tests"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --max-warnings 0 --ignore-path .gitignore --fix"
    ],
    "*.{json,ts,tsx,html}": [
      "prettier --write --ignore-unknown"
    ]
  },
  "engines": {
    "node": ">=18"
  }
}
