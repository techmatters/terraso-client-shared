{
  "name": "terraso-client-shared",
  "version": "0.1.0",
  "private": true,
  "sideEffects": [
    "src/tests/config.ts"
  ],
  "files": [
    "src",
    "dist"
  ],
  "exports": {
    "./*": "./dist/*.js",
    "./tests/*": null,
    "./*.test": null
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.5",
    "@rollbar/react": "^0.11.1",
    "@turf/bbox": "^6.5.0",
    "@turf/center": "^6.5.0",
    "@turf/helpers": "^6.5.0",
    "canvg": "^4.0.1",
    "filesize": "^10.0.7",
    "get-video-id": "^3.6.5",
    "history": "^5.3.0",
    "i18next": "^22.4.15",
    "i18next-browser-languagedetector": "^7.0.1",
    "js-cookie": "^3.0.5",
    "jwt-decode": "^3.1.2",
    "lodash": "^4.17.21",
    "path-browserify": "^1.0.1",
    "react": "^18.2.0",
    "react-redux": "^8.1.0",
    "use-debounce": "^9.0.4",
    "uuid": "^9.0.0",
    "web-vitals": "^3.3.1"
  },
  "scripts": {
    "prepare": "npm run generate-types && npm run build",
    "generate-types": "graphql-codegen",
    "lint-js": "eslint ./ --fix --ext .ts --ext .tsx --max-warnings 0 --ignore-path .gitignore",
    "check-ts": "npm run generate-types && tsc --noEmit",
    "build": "tsc",
    "test": "jest",
    "test-debug": "npm run generate-types && npx --inspect-brk jest --runInBand --no-cache",
    "test-coverage": "npm run generate-types && jest --coverage --changedSince=origin/main --watchAll=false"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ],
  "devDependencies": {
    "@graphql-codegen/cli": "^3.3.1",
    "@graphql-codegen/client-preset": "^4.0.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.0.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.2",
    "@types/jest-axe": "^3.5.5",
    "@types/js-cookie": "^3.0.3",
    "@types/lodash": "^4.14.195",
    "@types/node": "^20.3.0",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-lodash-fp": "^2.2.0-a1",
    "eslint-plugin-prettier": "^4.2.1",
    "flat": "^5.0.2",
    "i18next-conv": "^13.1.1",
    "jest": "^29.5.0",
    "jest-axe": "^7.0.1",
    "jest-environment-jsdom": "^29.5.0",
    "plausible-tracker": "^0.3.8",
    "prettier": "^2.8.8",
    "stylelint": "^15.7.0",
    "stylelint-prettier": "^3.0.0",
    "terraso-backend": "techmatters/terraso-backend#d1a9923",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4",
    "whatwg-fetch": "^3.6.2"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "modulePaths": [
      "src/"
    ],
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/src/tests/setup.ts",
      "<rootDir>/src/tests/config.ts"
    ],
    "clearMocks": true
  },
  "graphql": {
    "schema": "node_modules/terraso-backend/terraso_backend/apps/graphql/schema/schema.graphql",
    "documents": "src/**/*.{js,ts,tsx}",
    "extensions": {
      "codegen": {
        "generates": {
          "src/graphqlSchema/": {
            "preset": "client",
            "config": {
              "documentMode": "string",
              "skipTypename": true,
              "enumsAsTypes": true,
              "dedupeFragments": true
            },
            "presetConfig": {
              "fragmentMasking": false
            }
          }
        }
      }
    }
  }
}
